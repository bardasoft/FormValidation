<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="FormValidation.Controls.DashBoardButton"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout Orientation="Vertical">
        <Image
            x:Name="DashBoardIcon"
            HeightRequest="80"
            HorizontalOptions="Center"
            Source="{Binding Icon}"
            WidthRequest="80" />

        <Label
            x:Name="DashBoardLabel"
            FontAttributes="Bold"
            FontSize="18"
            HorizontalOptions="Center"
            Text="{Binding Label}"
            TextColor="#3A444D" />
    </StackLayout>
</ContentView>